<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/proimgmseeage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/addpic"/>
    <TextView
        android:id="@+id/reciverid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/proimgmseeage"
        android:background="@drawable/recivermessagelayout"
        android:text="recivermessage"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/senderimg"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"/>
     <ImageView
         android:id="@+id/reciverimg"
         android:layout_width="170dp"
         android:layout_height="170dp"
         android:layout_alignParentStart="true"
         android:layout_marginStart="35dp"
         android:layout_marginTop="13dp"
         android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/senderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:layout_alignParentTop="@+id/reciverid"
        android:background="@drawable/sendermessagelauyout"
        android:text="sender message"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:padding="10dp"
        android:textColor="@color/white"/>

</RelativeLayout>